<div class="container">
    <h1> Nuevo tweet </h1>
    <%= form_with model: @tweet do |f| %> <!---Los forms se hacen para que
    se pueda poner informaciÃ³n en ellos, literal es 
    como google form en donde tengo que definir que campos pongo--->
        <div class="form-row">
            <div class="form-group col-6">
                <%= f.text_field :body, placeholder: 'Comparte tu estado', class: 'form-control' %>
            </div>
            <div class="form-group col-6">
                <%= f.text_field :hashtags, placeholder: 'Hashtags', class: 'form-control' %>
            </div>
            <br>
    
        </div>
        
        <%= f.submit 'Guardar', class: 'btn btn-primary mt-2' %>
    <% end %>
</div>